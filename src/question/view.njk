{% extends "layout.html" %}

{% block pageTitle %}
  Page Title
{% endblock %}

{% block content %}
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h1>
          {{result.question}}
        </h1>

        <hr />
        <form method="post">
          {% for answer in result.answers %}
            <div class="radio">
             <label>
               <input type="radio" name="answer" value="{{answer.answer}}" />{{answer.answer}}
             </label>
           </div>
          {% endfor %}

          <input type="hidden" name="id" value="{{result._id}}">

          <button class="btn btn-primary btn-lg" type="submit">Next question</button>

          <hr />

          <a href="/results" class="btn btn-default btn-lg">Finish</a>
        </form>
      </div>
    </div>
{% endblock %}

{% block pageScripts %}
  {% include './frontend-js.js'%}
{% endblock %}